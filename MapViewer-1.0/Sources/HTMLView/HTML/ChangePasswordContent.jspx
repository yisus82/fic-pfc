<html:form xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:html="http://struts.apache.org/tags-html" action="ChangePassword.do"
	focus="oldPassword">

	<jsp:output omit-xml-declaration="true" />
	<html:xhtml />

	<div class="field"><span class="label"> <fmt:message
		key="ChangePasswordContent.oldPassword" /> </span> <span class="entry"> <html:password
		property="oldPassword" size="30" maxlength="30" /> <html:errors
		property="oldPassword" /> </span></div>

	<div class="field"><span class="label"> <fmt:message
		key="ChangePasswordContent.newPassword" /> </span> <span class="entry"> <html:password
		property="newPassword" size="30" maxlength="30" /> <html:errors
		property="newPassword" /> </span></div>

	<div class="field"><span class="label"> <fmt:message
		key="ChangePasswordContent.retypeNewPassword" /> </span> <span class="entry">
	<html:password property="retypeNewPassword" size="30" maxlength="30" /> <html:errors
		property="retypeNewPassword" /> </span></div>

	<div class="button"><html:submit>
		<fmt:message key="Buttons.OK" />
	</html:submit></div>

</html:form>
